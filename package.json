{
  "name": "ginny-mdbook",
  "version": "0.4.11",
  "description": "Single page markdown website ginny component",
  "repository": {
    "url": "https://github.com/ginny-org/ginny-mdbook"
  },
  "main": "lib/index.js",
  "files": [
    "lib/*.js",
    "lib/*.d.ts",
    "lib/*.css"
  ],
  "scripts": {
    "start": "tsc -w",
    "build": "npm-run-all --parallel build:ts build:copy:*",
    "build:ts": "tsc",
    "build:copy:mermaid": "shx cp node_modules/mermaid/dist/mermaid.min.js lib/",
    "build:copy:katexcss": "ts-node tasks/copyKatexCSS.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ginny",
    "markdown",
    "book"
  ],
  "author": "Jesse van den Kieboom",
  "license": "ISC",
  "devDependencies": {
    "@swc/core": "^1.3.74",
    "@types/katex": "^0.16.3",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.7.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-plugin-prettier": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "ginny": "~0.4.5"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "cssnano": "^6.0.1",
    "katex": "^0.16.8",
    "marked": "^5.0.1",
    "marked-gfm-heading-id": "^3.0.4",
    "mermaid": "^10.4.0",
    "postcss": "^8.4.30"
  }
}
