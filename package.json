{
  "name": "ginny-mdbook",
  "version": "0.2.2",
  "description": "Single page markdown website ginny component",
  "main": "lib/index.js",
  "files": [
    "lib/*.js",
    "lib/*.d.ts",
    "lib/style.css"
  ],
  "scripts": {
    "start": "tsc -w",
    "build": "npm-run-all --parallel build:ts build:copy",
    "build:ts": "tsc",
    "build:copy": "shx cp node_modules/mermaid/dist/mermaid.min.js lib/",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ginny",
    "markdown",
    "book"
  ],
  "author": "Jesse van den Kieboom",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.4.5",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.4",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "ginny": "~0.2.0"
  },
  "dependencies": {
    "@types/marked": "^5.0.1",
    "marked": "^5.0.1",
    "marked-gfm-heading-id": "^3.0.4",
    "marked-mangle": "^1.1.0",
    "mermaid": "^10.3.0"
  }
}
