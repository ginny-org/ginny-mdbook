{
  "name": "ginny-mdbook",
  "version": "0.4.20",
  "description": "Single page markdown website ginny component",
  "repository": {
    "url": "https://github.com/ginny-org/ginny-mdbook"
  },
  "main": "lib/index.js",
  "files": [
    "lib/*.js",
    "lib/*.d.ts",
    "lib/*.css"
  ],
  "scripts": {
    "start": "tsc -w",
    "build": "npm-run-all --parallel build:ts build:copy:*",
    "build:ts": "tsc",
    "build:copy:mermaid": "shx cp node_modules/mermaid/dist/mermaid.min.js lib/",
    "build:copy:katexcss": "tsx tasks/copyKatexCSS.ts",
    "prepublishOnly": "npm run build",
    "test": "eslint . && prettier -c ."
  },
  "keywords": [
    "ginny",
    "markdown",
    "book"
  ],
  "author": "Jesse van den Kieboom",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/katex": "^0.16.7",
    "@types/marked": "^6.0.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "shx": "^0.4.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  },
  "peerDependencies": {
    "ginny": "~0.4.9"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "cssnano": "^7.1.2",
    "katex": "^0.16.25",
    "marked": "^17.0.0",
    "mermaid": "^11.12.1",
    "postcss": "^8.5.6"
  }
}
